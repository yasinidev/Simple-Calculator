<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.calculator.app.MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_marginBottom="1pt"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:background="@color/black"
        android:gravity="right|center"
        android:textColor="@color/white"
        android:textSize="20pt"
        android:inputType="textPersonName"
        android:text="" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1pt"
        >

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnC"
                android:layout_width="30pt"
                android:layout_height="wrap_content"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="clearEvent"
                android:text="@string/cancel"
                android:textSize="130px"
                android:textColor="@color/dark_orange"></Button>

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="operatorEvent"
                android:text="รท"
                android:textColor="@color/dark_orange"
                android:textSize="130px"></Button>

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="operatorEvent"
                android:text="x"
                android:textColor="@color/dark_orange"
                android:textSize="100px"></Button>

            <Button
                android:id="@+id/btnD"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="deleteEvent"
                android:text="โซ"
                android:textColor="@color/dark_orange"
                android:textSize="130px"></Button>

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1pt"
        >

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="30pt"
                android:layout_height="wrap_content"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="numberEvent"
                android:text="@string/_7"
                android:textColor="@color/white"
                android:textSize="130px"></Button>

            <Button
                android:id="@+id/btnEight"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="numberEvent"
                android:text="@string/_8"
                android:textColor="@color/white"
                android:textSize="130px"></Button>

            <Button
                android:id="@+id/btnNine"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="numberEvent"
                android:text="@string/_9"
                android:textColor="@color/white"
                android:textSize="130px"></Button>

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="operatorEvent"
                android:text="@string/minus"
                android:textColor="@color/dark_orange"
                android:textSize="130px"></Button>

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1pt"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="numberEvent"
                android:text="@string/_4"
                android:textColor="@color/white"
                android:textSize="130px"></Button>

            <Button
                android:id="@+id/btnFive"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="numberEvent"
                android:text="@string/_5"
                android:textColor="@color/white"
                android:textSize="130px"></Button>

            <Button
                android:id="@+id/btnSix"
                android:layout_width="30pt"
                android:layout_height="wrap_content"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="numberEvent"
                android:text="@string/_6"
                android:textColor="@color/white"
                android:textSize="130px"></Button>

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="operatorEvent"
                android:text="@string/plus"
                android:textColor="@color/dark_orange"
                android:textSize="130px"></Button>

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1pt"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="30pt"
                android:layout_height="wrap_content"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="numberEvent"
                android:text="@string/one"
                android:textColor="@color/white"
                android:textSize="130px"></Button>

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="numberEvent"
                android:text="@string/two"
                android:textColor="@color/white"
                android:textSize="130px"></Button>

            <Button
                android:id="@+id/btnThree"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="numberEvent"
                android:text="@string/three"
                android:textColor="@color/white"
                android:textSize="130px"></Button>

            <Button
                android:id="@+id/btnAC"
                android:layout_width="30pt"
                android:layout_height="wrap_content"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="percentEvent"
                android:text="@string/percent"
                android:textColor="@color/dark_orange"
                android:textSize="130px"></Button>

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1pt"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnZero"
                android:layout_width="30pt"
                android:layout_height="match_parent"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="numberEvent"
                android:text="@string/zero"
                android:textColor="@color/white"
                android:textSize="130px"></Button>

            <Button
                android:id="@+id/btnZeroo"
                android:layout_width="30pt"
                android:layout_height="wrap_content"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="numberEvent"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="130px"></Button>

            <Button
                android:id="@+id/btnDot"
                android:layout_width="30pt"
                android:layout_height="wrap_content"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:onClick="numberEvent"
                android:text="."
                android:textColor="@color/white"
                android:textSize="130px"></Button>

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="30pt"
                android:layout_height="wrap_content"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/white"
                android:onClick="equalEvent"
                android:text="@string/equal"
                android:textColor="@color/dark_orange"
                android:textSize="130px"></Button>

        </TableRow>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="320dp"
            android:layout_height="52dp"
            android:background="@color/gray"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-8227931442806939/6971452476">
        </com.google.android.gms.ads.AdView>

    </TableLayout>
</LinearLayout>